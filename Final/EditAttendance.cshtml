@page
@model EditAttendanceModel
@{
    ViewData["Title"] = "Edit Attendance";
}

<div class="text-center">
    <h1 class="display-4">Edit Attendance</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="Attendance.Id" />
            <input type="hidden" asp-for="Attendance.StudentId" />
            <input type="hidden" asp-for="Attendance.FullName" />
            <input type="hidden" asp-for="Attendance.Section" />
            <input type="hidden" asp-for="Attendance.Date" />

            <div class="card" 
                 style="border: 2px solid black;
                        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
                        border-radius: 15px;
                        padding: 20px;
                        transition: 0.3s;"
                 
                        onmouseover=" this.style.boxShadow='0 6px 15px rgba(0,0,0,0.6)' ; this.style.transform='translateY(-2px)' "
                        onmouseout=" this.style.boxShadow='0 4px 10px rgba(0,0,0,0.4)'; this.style.transform='translateY(0)' ">
                
                    <h3 class="text-center"; style="font-weight: normal;">Attendance Details</h3>
               
                <div class="card-body" style="background-color: white; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4); border-radius: 15px; padding: 20px;">
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: bold;">Student Name:</label>
                        <p>@Model.Attendance.FullName</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" style="font-weight: bold;">Student ID:</label>
                        <p>@Model.Attendance.StudentId</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" style="font-weight: bold;">Section:</label>
                        <p>@Model.Attendance.Section</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" style="font-weight: bold;">Date:</label>
                        <p>@Model.Attendance.Date.ToString("MMMM dd, yyyy")</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" style="font-weight: bold;">Current Status:</label>
                        <p style="color: @(Model.Attendance.Status == "Present" ? "green" : "red");">
                            @Model.Attendance.Status
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Update Status:</label>
                        <div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="Attendance.Status" value="Present" id="present" />
                                <label class="form-check-label" for="present">Present</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="Attendance.Status" value="Absent" id="absent" />
                                <label class="form-check-label" for="absent">Absent</label>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn" style="font-weight: bold; background-color: #28A745; border: 1px solid #28A745; color: white;">Save Changes</button>
                        <a href="/Record" class="btn" style="font-weight: bold; background-color: #FF0000; border: 1px solid #FF0000; color: white;">Cancel</a>
                    </div>
                </div>
            </div>
        </form>

        @if (TempData["Message"] != null)
        {
            <div class="alert mt-3" role="alert" style="background-color: white; border: 1px solid #dee2e6; color: green;">
                @TempData["Message"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert mt-3" role="alert" style="background-color: white; border: 1px solid #dee2e6; color: red;">
                @TempData["Error"]
            </div>
        }
    </div>
</div>
