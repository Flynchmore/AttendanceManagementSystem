<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Attendance Management System</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AttendanceSystem2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index" 
                style="font-weight: bold;
                       box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4); 
                       border-radius: 10px; 
                       padding: 5px; 
                       margin-right: 15px;
                       transition: 0.2s;"
                       
                       onmouseover=" this.style.boxShadow='0 6px 15px rgba(0,0,0,0.6)' ; this.style.transform='translateY(-2px)' "
                       onmouseout=" this.style.boxShadow='0 4px 10px rgba(0,0,0,0.4)'; this.style.transform='translateY(0)' ">Home</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index" 
                            style="font-weight: bold;
                                   box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4); 
                                   border-radius: 10px; 
                                   padding: 5px; 
                                   margin-right: 15px;
                                   transition: 0.2s;"
                              
                                   onmouseover=" this.style.boxShadow='0 6px 15px rgba(0,0,0,0.6)' ; this.style.transform='translateY(-2px)' "
                                   onmouseout=" this.style.boxShadow='0 4px 10px rgba(0,0,0,0.4)'; this.style.transform='translateY(0)' ">Register Student</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Attendances" 
                            style="font-weight: bold;
                                   box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4); 
                                   border-radius: 10px; 
                                   padding: 5px; 
                                   margin-right: 15px;
                                   transition: 0.2s;"
                              
                                   onmouseover=" this.style.boxShadow='0 6px 15px rgba(0,0,0,0.6)' ; this.style.transform='translateY(-2px)' "
                                   onmouseout=" this.style.boxShadow='0 4px 10px rgba(0,0,0,0.4)'; this.style.transform='translateY(0)' ">Attendances</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Record" 
                            style="font-weight: bold;
                                   box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4); 
                                   border-radius: 10px; 
                                   padding: 5px; 
                                   margin-right: 15px;
                                   transition: 0.2s;"
                               
                                   onmouseover=" this.style.boxShadow='0 6px 15px rgba(0,0,0,0.6)' ; this.style.transform='translateY(-2px)' "
                                   onmouseout=" this.style.boxShadow='0 4px 10px rgba(0,0,0,0.4)'; this.style.transform='translateY(0)' ">Record</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
